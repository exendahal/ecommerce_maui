<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EcommerceMAUI.AppShellView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="http://burkus.co.uk"
    xmlns:views="clr-namespace:EcommerceMAUI.Views"
    xmlns:vm="clr-namespace:EcommerceMAUI.ViewModel"
    BindingContext="{mvvm:ResolveBindingContext x:TypeArguments=vm:AppShellViewModel}"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Explore">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIcon" Glyph="&#xf56e;" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:HomePageView}" Route="Home" />
        </Tab>
        <Tab Title="Cart">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIcon" Glyph="&#xf110;" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:CartView}" Route="Cart" />
        </Tab>
        <Tab Title="Account">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIcon" Glyph="&#xf004;" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:ProfileView}" Route="Profile" />
        </Tab>
    </TabBar>

</Shell>
